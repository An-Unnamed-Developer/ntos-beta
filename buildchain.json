{
    "name": "pop-distro",
    "base": "ubuntu:17.10",
    "source": {
        "kind": "git",
        "url": "."
    },
    "prepare": [
        ["add-apt-repository", "-y", "ppa:system76/pop"],
        ["apt-get", "update"],
        ["apt-get", "install", "-y", "make", "ovmf", "qemu-efi", "qemu-kvm", "squashfs-tools", "xorriso", "zsync"]
    ],
    "build": [
        ["bash", "-c", "cd source && ./buildchain.sh"]
    ],
    "prepare": [
        ["mv", "source/build/17.10/pop-os.tar", "artifacts"]
    ]
}
